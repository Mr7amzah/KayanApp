<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitlePurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المشتريات"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم الصنف" />

        <EditText
            android:id="@+id/etItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نوعه (بضاعة أو أصل)"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="السعر"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="التاريخ"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSavePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
